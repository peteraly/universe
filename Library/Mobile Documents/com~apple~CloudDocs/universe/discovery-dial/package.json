{
  "name": "discovery-dial",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "node ../staging/scripts/test-runner.js",
    "test:regression": "node ../staging/scripts/regression-suite.js",
    "test:all": "npm run test && npm run test:regression",
    "pipeline": "node ../staging/scripts/ci-cd-pipeline.js",
    "freeze": "node ../staging/scripts/freeze-manager.js freeze",
    "unfreeze": "node ../staging/scripts/freeze-manager.js unfreeze",
    "freeze:status": "node ../staging/scripts/freeze-manager.js status",
    "freeze:log": "node ../staging/scripts/freeze-manager.js log",
    "seed": "node ../staging/seed/seed-manager.js seed",
    "unseed": "node ../staging/seed/seed-manager.js unseed",
    "seed:status": "node ../staging/seed/seed-manager.js status",
    "seed:validate": "node ../staging/seed/seed-manager.js validate",
    "seed:log": "node ../staging/seed/seed-manager.js log",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "accessibility": "node scripts/accessibility-check.js",
    "audit:all": "npm run lighthouse && npm run accessibility"
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.263.1",
    "mapbox-gl": "^3.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "vite": "^4.4.5"
  }
}
