# Video Generation System Configuration

# Application Settings
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# Video Generation Paths
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
BLENDER_PATH=/Applications/Blender.app/Contents/MacOS/Blender
OUTPUT_DIR=./outputs/videos
TEMP_DIR=./temp

# API Keys (Replace with your actual keys for production)
# These are optional for development - the system will use mock data

# Elevation API (e.g., OpenTopography, USGS)
ELEVATION_API_KEY=your_elevation_api_key_here

# Terrain API (e.g., MapBox, Google Maps)
TERRAIN_API_KEY=your_terrain_api_key_here

# Weather API (e.g., OpenWeatherMap, WeatherAPI)
WEATHER_API_KEY=your_weather_api_key_here

# Golf Course Database API (e.g., GolfNow, PGA Tour)
GOLF_COURSE_API_KEY=your_golf_course_api_key_here

# Satellite Imagery API (e.g., Google Earth Engine, Planet)
SATELLITE_API_KEY=your_satellite_api_key_here

# Text-to-Speech API (e.g., Google Cloud TTS, Amazon Polly)
TTS_API_KEY=your_tts_api_key_here

# Analytics and Monitoring
ANALYTICS_ENABLED=true
LOG_LEVEL=info
PERFORMANCE_MONITORING=true

# Database (if using external database)
DATABASE_URL=your_database_url_here

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# File Storage (for production)
STORAGE_BUCKET=your_storage_bucket_here
STORAGE_REGION=us-east-1

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Video Generation Settings
MAX_CONCURRENT_JOBS=3
VIDEO_QUALITY=high
DEFAULT_RESOLUTION=1920x1080
DEFAULT_FPS=30
MAX_VIDEO_DURATION=120

# Development Settings
ENABLE_MOCK_DATA=true
SKIP_VIDEO_RENDERING=false
FAST_MODE=false
